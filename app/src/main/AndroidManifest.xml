<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pouillcorp.sortirnice">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.AccueilActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AfficherEvenementsActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.AfficherEntriesDiversActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.AfficherEntryDetailActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.AfficherEvenementDetailActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.AfficherFavorisActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.AfficherEvenementsFavorisActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.AfficherEntriesFavorisActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>