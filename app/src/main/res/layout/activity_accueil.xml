<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".activities.AccueilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/ToolBarStyle"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEvents"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evenements button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEvenements"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test tous"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="chargerTous"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorties button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEntriesSortie"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurants button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEntriesRestaurant"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transports button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEntriesTransport"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotels button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEntriesHotel"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boutiques button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEntriesBoutique"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hebergements button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEntriesHebergement"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoppings button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEntriesShopping"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visites button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEntriesVisite"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utiles button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherEntriesUtile"
            />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes Favoris"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:onClick="afficherMesFavoris"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_navigation_menu"
            app:labelVisibilityMode="labeled"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
